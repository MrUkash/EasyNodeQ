{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "lib",
    // "baseUrl": ".",
    // "paths": {
    //   "*": [
    //     "node_modules/*",
    //     "src/types/*"
    //   ]
    // },
    // "typeRoots": [
    //   "node_modules/@types",
    //   "src/types"
    // ],
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules"
  ],
}